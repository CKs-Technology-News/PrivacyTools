# https://editorconfig.org/
root = true

[*.{json,html,css,pdf.link}]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.{json,pdf.link}]
max_line_length = off

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
# https://stackoverflow.com/questions/48699317/what-is-a-comment-in-commit-editmsg-in-github
max_line_length = off
